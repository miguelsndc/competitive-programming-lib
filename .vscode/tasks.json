{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "cpbuild",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
                "-g",
				"-DCARNEDESOOOL",
				"-O2",
				"-std=c++23",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compilador: /usr/bin/g++"
		},
		{
            "label": "Run executable with redirected I/O",
            "type": "shell",
            "command": "./${fileBasenameNoExtension} < in.in > out.out",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "cpbuild"
            ],
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"panel": "shared",
				"focus": false,
				"showReuseMessage": false,
				"clear": false
			}
        }
	]
}